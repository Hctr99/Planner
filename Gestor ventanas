package Manejo_Archivos;

import Clases_GUIs.Ventana_menu;
import Clases_GUIs.Ventana_metas_completadas;
import Clases_GUIs.Ventana_metas;
import Clases_GUIs.Ventana_misiones_semanales;
import Clases_GUIs.Ventana_agregar_metas;
import Clases_GUIs.Ventana_agregar_misiones;

public class GestorVentanas
{
	private Ventana_menu launcher;
	private Ventana_metas_completadas metasCompletadas;
	private Ventana_metas metas;
	private Ventana_misiones_semanales misionesSemanales;
	private Ventana_agregar_metas agregarMetas;
	private Ventana_agregar_misiones agregarMisiones;
       
    public GestorVentanas(){

    }

    public  void ejecutarVentanaMenu(){
        this.launcher = new Ventana_menu();
        this.launcher.setBounds(0, 0, 400, 550);
        this.launcher.setVisible(true);
        this.launcher.setLocationRelativeTo(null);
        this.launcher.setResizable(false);
    }

    public  void ejecutarVentanaMetasCompletadas(){
        this.metasCompletadas = new Ventana_metas_completadas();
        this.metasCompletadas.setBounds(0, 0, 400, 550);
        this.metasCompletadas.setVisible(true);
        this.metasCompletadas.setLocationRelativeTo(null);
        this.metasCompletadas.setResizable(false);
    }

    public  void ejecutarVentanaMetas(){
        this.metas = new Ventana_metas();
        this.metas.setBounds(0, 0, 400, 550);
        this.metas.setVisible(true);
        this.metas.setLocationRelativeTo(null);
        this.metas.setResizable(false);
    }

    public  void ejecutarVentanaMisionesSemanales(){
        this.misionesSemanales = new Ventana_misiones_semanales();
        this.misionesSemanales.setBounds(0, 0, 400, 550);
        this.misionesSemanales.setVisible(true);
        this.misionesSemanales.setResizable(false);
        this.misionesSemanales.setLocationRelativeTo(null);
    }

    public  void ejecutarVentanaAgregarMetas(){
        this.agregarMetas = new Ventana_agregar_metas();
        this.agregarMetas.setBounds(0, 0, 400, 550);
        this.agregarMetas.setVisible(true);
        this.agregarMetas.setLocationRelativeTo(null);
        this.agregarMetas.setResizable(false);
    }

    public  void ejecutarVentanaAgregarMisiones(){
        this.agregarMisiones = new Ventana_agregar_misiones();
        this.agregarMisiones.setBounds(0, 0, 400, 550);
        this.agregarMisiones.setVisible(true);
        this.agregarMisiones.setLocationRelativeTo(null);
        this.agregarMisiones.setResizable(false);

    }
}
